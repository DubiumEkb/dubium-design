{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.stories.tsx", "**/*.test.tsx"]
}
