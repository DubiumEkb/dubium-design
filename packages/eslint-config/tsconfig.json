{
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"rootDir": "./src",
		"strict": true,
		"module": "ESNext",
		"target": "ESNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"typeRoots": ["./node_modules/@types"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
